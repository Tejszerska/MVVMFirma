<local:AllViewBase x:Class="MVVMFirma.Views.AllPawnLoans"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="pawn_loan_id" Binding="{Binding pawn_loan_id}"/>
                <DataGridTextColumn Header="client_id" Binding="{Binding client_id}"/>
                <DataGridTextColumn Header="agreement_number" Binding="{Binding agreement_number}"/>
                <DataGridTextColumn Header="start_date" Binding="{Binding start_date}"/>
                <DataGridTextColumn Header="due_date" Binding="{Binding due_date}"/>
                <DataGridTextColumn Header="total_loan_amount" Binding="{Binding total_loan_amount}"/>
                <DataGridTextColumn Header="interest_rate_id" Binding="{Binding interest_rate_id}"/>
                <DataGridTextColumn Header="status" Binding="{Binding status}"/>
                <DataGridTextColumn Header="previous_loan_id" Binding="{Binding previous_loan_id}"/>
                <DataGridTextColumn Header="Active?" Binding="{Binding is_active}"/>
                <DataGridTextColumn Header="History ID" Binding="{Binding history_id}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:AllViewBase>
