<local:AllViewBase x:Class="MVVMFirma.Views.AllPawnLoans"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Agreement Number" Binding="{Binding AgreementNumber}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat=\{0:yyyy-MM-dd\}}"/>
                <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat=\{0:yyyy-MM-dd\}}"/>
                <DataGridTextColumn Header="Total LoanAmount" Binding="{Binding TotalLoanAmount}"/>
                <DataGridTextColumn Header="Interest Rate" Binding="{Binding InterestRate}"/>
                <DataGridTextColumn Header="Previous Agreement Number" Binding="{Binding PreviousAgreementNumber}"/>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border Padding="3" Background="{DynamicResource HighlatedRow}">
                        <ItemsControl ItemsSource="{Binding Items}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" FontWeight="Bold" Style="{DynamicResource ThemeColorText}">
                                            <Run Text="{Binding ItemID, StringFormat='{}{0}:'}" />
                                            <Run Text="{Binding ItemName}" />
                                        </TextBlock>

                                        <TextBlock Grid.Row="1" Margin="0,2,0,0" Style="{DynamicResource ThemeColorText}">
                                            <Run Text="Condition:"/>
                                            <Run Text="{Binding Condition}" />
                                            <Run Text=" | " Foreground="{DynamicResource Accent}" />
                                            <Run Text="{Binding EstimatedValue, StringFormat='Est. Value: {0:C}'}" />
                                            <Run Text=" | " Foreground="{DynamicResource Accent}" />
                                            <Run Text="{Binding SellingPrice, StringFormat='Selling price: {0:C}'}" />
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>

        </DataGrid>
    </Grid>
</local:AllViewBase>
