<local:AllViewBase x:Class="MVVMFirma.Views.AllSales"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sale ID" Binding="{Binding SaleID}"/>
                <DataGridTextColumn Header="Sale Date" Binding="{Binding SaleDate, StringFormat=\{0:yyyy-MM-dd\}}"/>
                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat=\{0:C\}}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="Payment Method" Binding="{Binding PaymentMethod}"/>
                <DataGridTextColumn Header="Payment Date" Binding="{Binding PaymentDate, StringFormat=\{0:yyyy-MM-dd\}}"/>
            </DataGrid.Columns>

            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border Padding="2">
                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding Items}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="0,5,0,10"  Background="{DynamicResource HighlatedRow}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" FontWeight="Bold" Style="{DynamicResource ThemeColorText}">
                                                    <Run Text="{Binding ItemID, StringFormat='{}{0}:'}" />
                                                    <Run Text="{Binding ItemName}" />
                                                </TextBlock>

                                                <TextBlock Grid.Row="1" Margin="0,2,0,0" Style="{DynamicResource ThemeColorText}" Opacity="0.9">
                                                    <Run Text="{Binding Condition, StringFormat='Condition: {0}'}" />
                                                    <Run Text=" | " Foreground="{DynamicResource Accent}" />
                                                    <Run Text="{Binding SellingPrice, StringFormat='Price: {0:C}'}" />
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
    </Grid>
</local:AllViewBase>