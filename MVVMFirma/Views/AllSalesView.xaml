<UserControl x:Class="MVVMFirma.Views.AllSales"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="sale_id"/>
                <DataGridTextColumn Header="sale_price"/>
                <DataGridTextColumn Header="sale_date"/>
                <DataGridTextColumn Header="finalization_source"/>
                <DataGridTextColumn Header="online_offer_id"/>
                <DataGridTextColumn Header="payment_id"/>
                <DataGridTextColumn Header="status"/>
                <DataGridTextColumn Header="is_active"/>
                <DataGridTextColumn Header="history_id"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
