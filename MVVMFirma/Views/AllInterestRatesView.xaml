<local:AllViewBase x:Class="MVVMFirma.Views.AllInterestRates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Interest rate ID" Binding="{Binding interest_rate_id}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding name}"/>
                <DataGridTextColumn Header="Rate percent" Binding="{Binding rate_percent}"/>
                <DataGridTextColumn Header="Period days" Binding="{Binding period_days}"/>
                <DataGridTextColumn Header="Minimal interest" Binding="{Binding minimal_interest}"/>
                <DataGridTextColumn Header="Is default?" Binding="{Binding is_default}"/>
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:AllViewBase>
