<local:AllViewBase x:Class="MVVMFirma.Views.AllOnlineSaleOffers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="OnlineSaleOfferId" Binding="{Binding OnlineSaleOfferId}"/>
                <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}"/>
                <DataGridTextColumn Header="Platform" Binding="{Binding Platform}"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="Expiration Date" Binding="{Binding ExpirationDate, StringFormat=\{0:yyyy-MM-dd\}}"/>
                <DataGridTextColumn Header="Offer Title" Binding="{Binding OfferTitle}"/>
                <DataGridTextColumn Header="Link" Binding="{Binding Link}"/>
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:AllViewBase>
