<UserControl x:Class="MVVMFirma.Views.AllOnlineSaleOffers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="online_offer_id"/>
                <DataGridTextColumn Header="item_id"/>
                <DataGridTextColumn Header="platform"/>
                <DataGridTextColumn Header="offer_title"/>
                <DataGridTextColumn Header="listing_price"/>
                <DataGridTextColumn Header="listing_date"/>
                <DataGridTextColumn Header="expiration_date"/>
                <DataGridTextColumn Header="url"/>
                <DataGridTextColumn Header="status"/>
                <DataGridTextColumn Header="views_count"/>
                <DataGridTextColumn Header="messages_count"/>
                <DataGridTextColumn Header="notes"/>
                <DataGridTextColumn Header="is_active"/>
                <DataGridTextColumn Header="history_id"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
