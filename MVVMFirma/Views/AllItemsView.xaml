<local:AllViewBase x:Class="MVVMFirma.Views.AllItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}">
        <DataGrid.Columns>
                <DataGridTextColumn Header="Item ID" Binding="{Binding item_id}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding name}"/>
                <DataGridTextColumn Header="Category ID" Binding="{Binding category_id}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding description}"/>
                <DataGridTextColumn Header="Estimated value" Binding="{Binding estimated_value}"/>
                <DataGridTextColumn Header="Sale price" Binding="{Binding sale_price}"/>
                <DataGridTextColumn Header="Condition" Binding="{Binding condition_id}"/>
                <DataGridTextColumn Header="Acquisition source type" Binding="{Binding acquisition_source_type}"/>
                <DataGridTextColumn Header="Acquisition source ID" Binding="{Binding acquisition_source_id}"/>
                <DataGridTextColumn Header="Current branch ID" Binding="{Binding current_branch_id}"/>
                <DataGridTextColumn Header="Item status" Binding="{Binding item_status}"/>
                <DataGridTextColumn Header="History ID" Binding="{Binding history_id}"/>
        </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:AllViewBase>
