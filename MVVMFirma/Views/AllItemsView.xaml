<local:AllViewBase x:Class="MVVMFirma.Views.AllItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}">
        <DataGrid.Columns>
                <DataGridTextColumn Header="Item ID" Binding="{Binding ItemId}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding ItemName}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding ItemStatus}"/>
                <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}"/>
                <DataGridTextColumn Header="Condition" Binding="{Binding Condition}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Estimated value" Binding="{Binding EstimatedValue}"/>
                <DataGridTextColumn Header="Sale price" Binding="{Binding SalePrice}"/>
                <DataGridTextColumn Header="Acquisition source type" Binding="{Binding AcquisitionSource}"/>
                <DataGridTextColumn Header="Current branch" Binding="{Binding BranchName}"/>
        </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:AllViewBase>
