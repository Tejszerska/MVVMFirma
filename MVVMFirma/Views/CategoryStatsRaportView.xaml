<UserControl x:Class="MVVMFirma.Views.CategoryStatsRaportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" HorizontalAlignment="Left" Margin="20" Width="550">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
               Content="Category Statistics Overview" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Category:" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="0,0,10,0"/>
        <ComboBox Grid.Row="1" Grid.Column="1" 
                  ItemsSource="{Binding CategoryComboBoxItems}"
                  DisplayMemberPath="Value"
                  SelectedValuePath="Key"
                  SelectedValue="{Binding CategoryId, Mode=TwoWay}"
                  VerticalContentAlignment="Center"/>

        <Button Grid.Row="2" Grid.Column="1" Content="Generate Statistics" Command="{Binding GenerateRaportCommand}" Margin="0,5,0,5"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Items in Stock:" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="0,0,10,0"/>
        <Label Grid.Row="3" Grid.Column="1" Content="{Binding ItemsCount}" VerticalContentAlignment="Center" FontWeight="Bold"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Average Aging (Days):" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="0,0,10,0"/>
        <Label Grid.Row="4" Grid.Column="1" Content="{Binding AvgDaysInStock}" ContentStringFormat="{}{0:F1} days" VerticalContentAlignment="Center" FontWeight="Bold"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Total Potential Profit:" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Margin="0,0,10,0"/>
        <Label Grid.Row="5" Grid.Column="1" Content="{Binding TotalPotentialProfit}" ContentStringFormat="{}{0:N2} zÅ‚" VerticalContentAlignment="Center" FontWeight="Bold"/>

    </Grid>
</UserControl>