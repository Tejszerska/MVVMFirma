<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MVVMFirma.Views">

    <Style TargetType="{x:Type local:AllViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:AllViewBase}">
                    <Grid Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/> <!--* oznacza pozostaÅ‚y obszar-->
                        </Grid.RowDefinitions>
                        <ToolBar Grid.Row="0" Height="30" Margin="0,2,0,2">
                            <ToggleButton Content="Add" Height="30" Width="70" Foreground="{DynamicResource MainText}"/>
                            <ToggleButton Content="Edit" Height="30" Width="70" Foreground="{DynamicResource MainText}"/>
                            <ToggleButton Content="Delete" Height="30" Width="70" Foreground="{DynamicResource MainText}"/>
                            <ToggleButton Content="Refresh" Height="30" Width="70" Command="{Binding LoadCommand}" Foreground="{DynamicResource MainText}"/>
                        </ToolBar>
                        <Expander Grid.Row="1"  Header="Filter and Sort"  Foreground="{DynamicResource MainText}">
                            <Label>Filtring and sorting </Label>
                        </Expander>
                        <ContentPresenter Grid.Row="2" Margin="0,5,0,5" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:OneViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:OneViewBase}">
                    <Grid Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34"/>
                            <RowDefinition Height="*"/>                            
                        </Grid.RowDefinitions>
                        <ToolBar Grid.Row="0" Height="30" Margin="0,2,0,2">
                            <ToggleButton Content="Save and close" Command="{Binding SaveAndCloseCommand}" Foreground="{DynamicResource MainText}"/>
                            <ToggleButton Content="Cancel" Foreground="{DynamicResource MainText}"/>
                        </ToolBar>
                        <ContentPresenter Grid.Row="1" Margin="0,5,0,5" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
