<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="SidebarBg" Color="#FEFEFE"/>
    <SolidColorBrush x:Key="WorkspaceBg" Color="#F4F6F8"/>
    <SolidColorBrush x:Key="MainText" Color="#111417"/>
    <SolidColorBrush x:Key="Accent" Color="#E4AD3A"/>
    <BitmapImage x:Key="AppLogo" UriSource="pack://application:,,,/Images/logo-light.png" />

    <Style x:Key="ThemeColorText" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource MainText}" />
    </Style>
</ResourceDictionary>